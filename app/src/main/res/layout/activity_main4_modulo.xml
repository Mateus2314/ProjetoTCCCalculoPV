<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Main4ActivityModulo"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:theme="@style/Base.Theme.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/EditAreadoModuloSolar"
        app:layout_constraintTop_toTopOf="@+id/EditAreadoModuloSolar">

        <TextView
            android:id="@+id/TxtModeloModuloSolar"
            android:layout_width="212dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/efi_inv"
            android:layerType="software"
            android:scrollbars="none"
            android:text="@string/textmodulosolartxt"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/edittxPotenciaNominalmodulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline5" />

        <TextView
            android:id="@+id/txtPotencianominalModulo"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/txtpotenciaNominalwpModulosolar"
            android:layerType="software"
            android:scrollbars="none"
            android:text="@string/txtpotenciaNominalwpModulosolar"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/edittxPotenciaNominalmodulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TxtModeloModuloSolar" />

        <TextView
            android:id="@+id/txtAreadoModuloSolar"
            android:layout_width="174dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/txtpotenciaNominalwpModulosolar"
            android:layerType="software"
            android:scrollbars="none"
            android:text="@string/txtAreadoModuloSolar"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline6" />

        <TextView
            android:id="@+id/TextoRendimentoModuloSolar"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/txtpotenciaNominalwpModulosolar"
            android:layerType="software"
            android:scrollbars="none"
            android:text="@string/TxtRendimentodoModuloSolar"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/txtAreadoModuloSolar"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/txTituloModuloAct"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/Inf_titulo_modulo"
            android:text="@string/Inf_titulo_modulo"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09393346" />

        <EditText
            android:id="@+id/edittxPotenciaNominalmodulo"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="@string/_320_wp"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtPotencianominalModulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txtPotencianominalModulo" />

        <EditText
            android:id="@+id/EditAreadoModuloSolar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="@string/_1_m"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark"
            app:layout_constraintBottom_toTopOf="@+id/editRendimentoModuloSolar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toEndOf="@+id/txtAreadoModuloSolar"
            app:layout_constraintTop_toTopOf="@+id/guideline6" />

        <EditText
            android:id="@+id/editRendimentoModuloSolar"
            android:layout_width="196dp"
            android:layout_height="26dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="@string/_1_m"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/TextoRendimentoModuloSolar"
            tools:layout_editor_absoluteY="258dp" />

        <EditText
            android:id="@+id/editModeloModuloSolar2"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="@string/yingli340p"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark"
            app:layout_constraintBaseline_toBaselineOf="@+id/TxtModeloModuloSolar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/TxtModeloModuloSolar" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>